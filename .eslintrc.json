{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nrwl/nx"
  ],

  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "utils",
                "notDependOnLibsWithTags": [
                  "client"
                ]
              },
              {
                "sourceTag": "atoms",
                "notDependOnLibsWithTags": [
                  "molecules",
                  "client"
                ]
              },
              {
                "sourceTag": "molecules",
                "notDependOnLibsWithTags": [
                  "organisms",
                  "app"
                ]
              },
              {
                "sourceTag": "organisms",
                "notDependOnLibsWithTags": [
                  "app"
                ]
              },
              {
                "sourceTag": "services",
                "notDependOnLibsWithTags": [
                  "ui"
                ]
              },
              {
                "sourceTag": "test",
                "onlyDependOnLibsWithTags": [
                  "utils",
                  "models"
                ]
              },
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": [
                  "*"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "excludedFiles": [
        "*.stories.ts"
      ],
      "extends": [
        "plugin:@nrwl/nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/javascript"
      ],
      "rules": {}
    }
  ]
}
